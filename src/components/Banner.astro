---
export interface Props {
  header_text: string;

  article_text: string;
  button_text: string;
  image_path: string;
  alt_text: string;

  seo_header: string;
}

const {
  header_text,
  article_text,
  button_text,
  image_path,
  seo_header,
  alt_text,
} = Astro.props;
---

<section>
  <h2 class="sr-only">{seo_header}</h2>
  <article>
    <h3>{header_text}</h3>
    <p>{article_text}</p>
    <a href="#contact" class="button primary-button" id="go-contact"
      >{button_text}</a
    >
    <a href="tel:+96178904080" class="button primary-button" id="tel-no"
      >{button_text}</a
    >
  </article>
  <img src={image_path} alt={alt_text} />
</section>
