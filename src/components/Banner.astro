<style>
  section {
    overflow: hidden;
    background-color: var(--primary-color);
    display: flex;
    padding: 2rem 5rem 0rem 5rem;
    gap: 15%;
    width: 100%;
  }
  article {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: flex-start;
    gap: 1rem;
    margin-top: 3rem;
  }

  h3 {
    font-size: var(--h1);
    color: var(--white);
    width: 75%;
  }
  p {
    font-size: var(--h5);
    color: var(--white);
    line-height: 1.6rem;
    font-weight: var(--wlight);
  }

  img {
    width: 80vw;
    height: 60vh;
  }

  a#tel-no {
    display: none;
  }

  @media only screen and (max-width: 1144px) {
    section {
      padding: 2.5rem 3rem 4.5rem 3rem;
      gap: 5%;
    }
    h3 {
      width: 100%;
    }
  }
  @media only screen and (max-width: 920px) {
    section {
      flex-direction: column-reverse;
    }
    article {
      margin-top: 1.5rem;
    }

    a#tel-no {
      display: inline-block;
    }

    a#go-contact {
      display: none;
    }
  }

  @media only screen and (max-width: 768px) {
    img {
      margin-top: 5rem;
    }
  }

  @media only screen and (max-width: 425px) {
    section {
      padding: 0.75rem 1rem 2rem 1rem;
      gap: 5%;
    }
    h3 {
      font-size: var(--h2);
    }
    img {
      margin-top: 6rem;
    }
  }
</style>
